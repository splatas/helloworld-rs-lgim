<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
    version="2.2">
    <persistence-unit name="helloworldPU" transaction-type="JTA">
        <!-- <jta-data-source>java:jboss/datasources/pgds</jta-data-source> -->
        <jta-data-source>java:/jdbc/PostgresDS</jta-data-source>
        <class>org.jboss.as.quickstarts.rshelloworld.model.Hello</class>
        <properties>
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
        </properties>
    </persistence-unit>
</persistence>